var result;
   switch (type)
   {      
   case "m3" :
		document.getElementById("TextArea1").style.fontFamily="Myanmar3, Parabaik, Padauk;";
    	result = Z1_Uni(input);
        break;  
   case "zg1" :
      	document.getElementById("TextArea1").style.fontFamily="Zawgyi-One";
        result = Uni_Z1(input);
        break;         
   default :
        break;
   }



document.getElementById("TextArea1").value=result;

}
</script>
